# ================================================
# Axidex Environment Configuration
# Copy this file to .env.local and fill in your values
# ================================================

# ================================================
# REQUIRED - Core Configuration
# ================================================

# Supabase - Database and Auth
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# App URL - Used for redirects, webhooks, and email links
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ================================================
# AI Services
# ================================================

# OpenRouter - For email generation
OPENROUTER_API_KEY=your_openrouter_key

# OpenAI - For signal extraction (worker)
OPENAI_API_KEY=your_openai_key

# ================================================
# Email Notifications (Resend)
# ================================================

# Resend API for sending emails
RESEND_API_KEY=re_xxxxxxxxxxxx
RESEND_FROM_EMAIL=Axidex <notifications@yourdomain.com>

# Internal API key for server-to-server calls
INTERNAL_API_KEY=generate_a_secure_random_string

# ================================================
# Billing (Stripe)
# ================================================

# Stripe API keys
STRIPE_SECRET_KEY=sk_test_xxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxx

# Stripe Price IDs
STRIPE_PRO_PRICE_ID=price_xxxxxxxxxxxx
STRIPE_ENTERPRISE_PRICE_ID=price_xxxxxxxxxxxx

# ================================================
# Slack Integration
# ================================================

SLACK_CLIENT_ID=your_slack_client_id
SLACK_CLIENT_SECRET=your_slack_client_secret

# ================================================
# CRM Integrations (Optional)
# ================================================

# HubSpot
HUBSPOT_CLIENT_ID=your_hubspot_client_id
HUBSPOT_CLIENT_SECRET=your_hubspot_client_secret

# Salesforce
SALESFORCE_CLIENT_ID=your_salesforce_client_id
SALESFORCE_CLIENT_SECRET=your_salesforce_client_secret

# Pipedrive
PIPEDRIVE_CLIENT_ID=your_pipedrive_client_id
PIPEDRIVE_CLIENT_SECRET=your_pipedrive_client_secret

# Zoho (if using)
ZOHO_CLIENT_ID=your_zoho_client_id
ZOHO_CLIENT_SECRET=your_zoho_client_secret

# ================================================
# Data Enrichment (Optional)
# ================================================

# Bright Data - For LinkedIn scraping
BRIGHT_DATA_API_TOKEN=your_bright_data_api_token

# ================================================
# Development
# ================================================

# NODE_ENV is set automatically by Next.js
# NODE_ENV=development
